<Page x:Class="Esox.Views.SystemMakerView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:fc="clr-namespace:WpfMath.Controls;assembly=WpfMath"
      xmlns:local="clr-namespace:Esox.ViewModels"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      Background="{DynamicResource RegionBrush}"
      mc:Ignorable="d"
      Title="SystemMakerView"
      Height="Auto" Width="Auto">
    <Page.DataContext>
        <local:SystemMakerViewModel/>
    </Page.DataContext>
    <Grid>
        <StackPanel 
            Orientation="Vertical">
            <StackPanel
                Orientation="Horizontal">
                <TextBox
                    Width="300"
                    FontSize="16"
                    AcceptsReturn="True"
                    FontFamily="Consolas"
                    Margin="10,10,5,10"
                    HorizontalContentAlignment="Left"
                    VerticalContentAlignment="Top"
                    Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"/>
                <fc:FormulaControl
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    Margin="5,10,10,10"
                    Formula="{Binding Text, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel 
                Orientation="Horizontal">
                <Button
                    Command="{Binding ParseMatrixCommand}"
                    Content="Прочесть"
                    Margin="10">
                    <Button.InputBindings>
                        <KeyBinding
                            Command="{Binding ParseAvoidCheckCommand}"
                            Key="Enter" 
                            Modifiers="Shift"/>
                    </Button.InputBindings>
                </Button>
                <TextBlock
                    Foreground="{DynamicResource PrimaryTextBrush}"
                    FontSize="16"
                    Text="{Binding Matrix}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
