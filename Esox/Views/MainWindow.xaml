<hc:Window x:Class="Esox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:fc="clr-namespace:WpfMath.Controls;assembly=WpfMath"
        mc:Ignorable="d"
        hc:Theme.Skin="Dark"
        Title="Esox Window" 
        Height="500" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/> <!-- Панель параметров -->
            <ColumnDefinition Width="*"/>   <!-- Область матрицы -->
        </Grid.ColumnDefinitions>

        <!-- Левая панель: Параметры -->
        <Border
            Grid.Column="0" 
            Background="{DynamicResource RegionBrush}" 
            BorderThickness="0 0 0 0" 
            BorderBrush="{DynamicResource BorderBrush}">
            <ScrollViewer>
                <StackPanel 
                    Margin="20">
                    <!-- Заголовок -->
                    <TextBlock
                        Text="Параметры матрицы" 
                        FontSize="21" 
                        Margin="0 0 0 10"/>
                    
                    <!-- Размеры матрицы -->
                    <StackPanel>
                        <Label
                            HorizontalAlignment="Left"
                            BorderBrush="{DynamicResource RegionBrush}"
                            Content="Порядок"
                            Margin="0 0 0 5" 
                            Opacity="0.8"/>
                        <hc:NumericUpDown
                            Maximum="10"
                            Minimum="2"/>
                    </StackPanel>
                
                    <!-- Тип матрицы -->
                    <StackPanel
                        HorizontalAlignment="Left">
                        <Label
                            BorderBrush="{DynamicResource RegionBrush}"
                            Content="Решения системы" 
                            Opacity="0.8"/>
                        <StackPanel>
                            <RadioButton
                                Margin="5"
                                Width="150"
                                Content="Множество"/>
                            <RadioButton 
                                Content="Единственное"
                                Margin="5"
                                Width="150"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Кнопка -->
                    <Button 
                        x:Name="GenerateBtn"
                        Content="Сгенерировать"
                        Style="{StaticResource ButtonPrimary}" 
                        Margin="0 20 0 0" Height="35"/>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Правая область: Вывод матрицы -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Панель действий -->
            <StackPanel
                Grid.Row="0" 
                Orientation="Horizontal" 
                HorizontalAlignment="Right" 
                Margin="10">
                <Button 
                    Content="Копировать" 
                    Style="{StaticResource ButtonSuccess}" 
                    Margin="0 0 5 0"/>
                <Button 
                    Content="Очистить" 
                    Style="{StaticResource ButtonDanger}"/>
            </StackPanel>

            <!-- Область вывода -->
            <hc:Card 
                Grid.Row="1" 
                Margin="10">
                <ScrollViewer>
                    <!-- Разделы области вывода -->
                    <StackPanel>
                        <!--FormulaView Система линейных уравнений -->
                        <fc:FormulaControl/>
                        <StackPanel>
                            <Label
                                Content="Дополнительная информация"
                                BorderBrush="{DynamicResource RegionBrush}"/>
                            <fc:FormulaControl/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </hc:Card>
        </Grid>
    </Grid>
</hc:Window>
