<hc:Window x:Class="Esox.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        xmlns:local="clr-namespace:Esox.ViewModels"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:fc="clr-namespace:WpfMath.Controls;assembly=WpfMath"
        Background="{DynamicResource RegionBrush}"
        mc:Ignorable="d"
        Title="Esox Window" 
        Height="700" Width="900">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <!-- Привязка клавиш к событиям -->
    <i:Interaction.Triggers>
        <i:KeyTrigger
            Key="S"
            Modifiers="Control">
            <i:InvokeCommandAction
                Command="{Binding SaveLatexCommand}"/>
        </i:KeyTrigger>
        <i:KeyTrigger
            Key="B"
            Modifiers="Control">
            <i:InvokeCommandAction
                Command="{Binding MakeCommand}"/>
        </i:KeyTrigger>
        <i:KeyTrigger
            Key="L"
            Modifiers="Control">
            <i:InvokeCommandAction
                Command="{Binding FromLatexCommand}"/>
        </i:KeyTrigger>
        <i:KeyTrigger
            Key="T"
            Modifiers="Control">
            <i:InvokeCommandAction
                Command="{Binding}"/>
        </i:KeyTrigger>
        <i:KeyTrigger
            Key="H"
            Modifiers="Control">
            <i:InvokeCommandAction
                Command="{Binding HelpCommand}"/>
        </i:KeyTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/> <!-- Панель параметров -->
            <ColumnDefinition Width="*"/>   <!-- Область матрицы -->
        </Grid.ColumnDefinitions>

        <!-- Левая панель: Параметры -->
        <Border
            Grid.Column="0"
            Background="{DynamicResource RegionBrush}" 
            BorderThickness="0 0 0 0" 
            BorderBrush="{DynamicResource BorderBrush}">
            <hc:ScrollViewer>
                <StackPanel>
                    <Expander
                        IsExpanded="False"
                        Margin="10"
                        Header="Новая система уравнений">
                        <StackPanel 
                                Margin="20">
                                <!-- Заголовок -->
                            <TextBlock
                                Foreground="{DynamicResource PrimaryTextBrush}"
                                Text="Новая матрица системы уравнений"
                                TextWrapping="WrapWithOverflow"
                                FontSize="21" 
                                Margin="0 0 0 10"/>
                            <!-- Размеры матрицы -->
                            <TextBlock
                                TextWrapping="WrapWithOverflow"
                                Text="Укажите характеристики системы линейных уравнений, которую необходимо сгенерировать и решить"
                                Opacity="0.6"
                                Foreground="{DynamicResource PrimaryTextBrush}"/>
                            <Label
                                HorizontalAlignment="Left"
                                BorderBrush="{DynamicResource RegionBrush}"
                                Content="Ожидаемые Порядок и Ранг матрицы"
                                Margin="0 0 0 5" 
                                Opacity="0.8"/>
                            <StackPanel Orientation="Horizontal">
                                <fc:FormulaControl
                                    Margin="0,0,5,0"
                                    VerticalAlignment="Center"
                                    Formula="n="/>
                                <hc:NumericUpDown
                                    Height="35"
                                    Margin="0,0,5,0"
                                    Width="100"
                                    Value="{Binding MainSystemOrdinal}"
                                    Minimum="2"
                                    Maximum="10"/>
                                <fc:FormulaControl
                                    Margin="5,0,5,0"
                                    VerticalAlignment="Center"
                                    Formula="r="/>
                                <hc:NumericUpDown
                                    Minimum="1"
                                    Maximum="9"
                                    Height="35"
                                    Width="100"
                                    Value="{Binding MainSystemRequiredRank}"
                                    IsEnabled="{Binding AllowSolutionCharacteristics}">
                                </hc:NumericUpDown>
                            </StackPanel>
                            
                            <!-- Тип матрицы -->
                            <StackPanel
                                HorizontalAlignment="Left">
                                <Label
                                    HorizontalAlignment="Left"
                                    BorderBrush="{DynamicResource RegionBrush}"
                                    Content="Характеристики системы" 
                                    Opacity="0.8"/>
                                <StackPanel>
                                    <CheckBox
                                        IsChecked="{Binding ConsistentSystem}"
                                        Content="Совместная"
                                        Width="150"
                                        Margin="5"/>
                                    <CheckBox
                                        IsEnabled="{Binding AllowHomogenousSystem}"
                                        IsChecked="{Binding HomogenousSystem}"
                                        Margin="5"
                                        Width="150"
                                        Content="Однородная"/>
                                    <CheckBox
                                        IsEnabled="{Binding AllowUndefinedSystem}"
                                        IsChecked="{Binding UndefinedSystem}"
                                        Content="Неопределенная"
                                        Margin="5"
                                        Width="150"/>
                                </StackPanel>
                            </StackPanel>
                            <StackPanel
                                HorizontalAlignment="Left">
                                <Label
                                    HorizontalAlignment="Left"
                                    BorderBrush="{DynamicResource RegionBrush}"
                                    Content="Способ решения"
                                    Opacity="0.8"/>
                                <StackPanel>
                                    <CheckBox
                                        BorderBrush="{DynamicResource RegionBrush}"
                                        Content="Правило Крамера"
                                        IsEnabled="{Binding AllowSolutionCharacteristics}"
                                        IsChecked="{Binding KramerMethodFlag}"
                                        Margin="5"
                                        Width="150"/>
                                </StackPanel>
                            </StackPanel>
                            
                            <StackPanel
                                HorizontalAlignment="Left">
                                <TextBlock
                                    FontFamily="Consolas"
                                    Foreground="{DynamicResource PrimaryTextBrush}"
                                    TextWrapping="WrapWithOverflow"
                                    Text="Типы генератора матрицы доступны на выбор только для совместных определенных систем линейных алгебраических уравнений"
                                    Opacity="0.6"
                                    Margin="0, 10,0,0">
                                </TextBlock>
                                <Label
                                    HorizontalAlignment="Left"
                                    Opacity="0.8"
                                    Content="Тип создателя матрицы"
                                    BorderBrush="{DynamicResource RegionBrush}"/>
                                <StackPanel>
                                    <ComboBox
                                        Width="250"
                                        Margin="5"
                                        SelectedIndex="{Binding GeneratorTypeMode}"
                                        IsEnabled="{Binding AllowGenerationMethods}">
                                        <ComboBoxItem Content="Метод Ортогонализации"/>
                                        <ComboBoxItem Content="Метод Треугольных матриц"/>
                                        <ComboBoxItem Content="Случайные коэффициенты"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>
                                
                            <!-- Кнопка -->
                            <StackPanel
                                Orientation="Horizontal">
                                <Button
                                    Width="100"
                                    Style="{StaticResource ButtonPrimary}"
                                    Content="Создать"
                                    Command="{Binding MakeCommand}"
                                    Margin="0 20 0 0" 
                                    Height="35"/>
                                <Button
                                    Command="{Binding SaveLatexCommand}"
                                    Width="120"
                                    Height="35"
                                    Margin="5,20,0,0"
                                    Content="Редактировать"/>
                            </StackPanel>
                            <TextBlock
                                TextWrapping="WrapWithOverflow"
                                Opacity="0.6"
                                Margin="0,10,0,0"
                                Text="Вы можете редактировать созданную систему уравнений, тогда ее разметка LaTeX сохранится в поле Существующий системы линейных уравнений"
                                FontFamily="Consolas"/>
                        </StackPanel>
                    </Expander>
                    <Expander
                        IsExpanded="False"
                        Margin="10,0,10,10"
                        Header="Существующая система уравнений">
                        <StackPanel
                            Margin="20">
                            <TextBlock
                                Foreground="{DynamicResource PrimaryTextBrush}"
                                Text="Существующая матрица системы (LaTeX)"
                                FontSize="21"
                                TextWrapping="WrapWithOverflow"/>
                            <TextBlock
                                TextWrapping="WrapWithOverflow"
                                Text="Укажите именно расширенную матрицу системы, а не систему линейных уравнений"
                                Opacity="0.7"
                                Margin="0,10,0,0"/>
                            <TextBox
                                Margin="10"
                                Text="{Binding LatexFormula, UpdateSourceTrigger= PropertyChanged}"
                                FontSize="16"
                                FontFamily="Consolas"
                                AcceptsTab="True"
                                AcceptsReturn="True">
                            </TextBox>
                            <!-- злючий обман -->
                            <Button
                                Command="{Binding FromLatexCommand}"
                                Content="Создать решение"
                                Style="{StaticResource ButtonPrimary}"
                                Width="150"
                                Height="35"
                                Margin="0,0,10,0"
                                HorizontalAlignment="Right">
                            </Button>
                            <fc:FormulaControl
                                Margin="0,10,0,10"
                                Formula="{Binding LatexFormula, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBlock
                                Opacity="0.7"
                                Margin="0,5,0,0"
                                FontFamily="Consolas"
                                Foreground="{DynamicResource PrimaryTextBrush}"
                                TextWrapping="WrapWithOverflow"
                                Text="{Binding EnvironmentHelpMessage}"/>
                        </StackPanel>
                    <!--Установка СЛАУ внутри окна-->
                    </Expander>
                    <Expander
                        IsExpanded="True"
                        Header="Справка"
                        Margin="10,0,10,10">
                        <StackPanel
                            Margin="20">
                            <TextBlock
                                Text="Esox-Math"
                                TextWrapping="WrapWithOverflow"
                                FontSize="21"/>
                            <TextBlock
                                Margin="10"
                                Opacity="0.8"
                                TextWrapping="WrapWithOverflow"
                                Text="{Binding AboutMessage}"/>
                            <TextBlock
                                TextWrapping="WrapWithOverflow"
                                FontFamily="Consolas"
                                Margin="0,10,0,0">
                                <Run Text="Версия:"/>
                                <Run Text="{Binding VersionMessage}"/>
                                <LineBreak/>
                            </TextBlock>
                            <TextBlock
                                TextWrapping="Wrap"
                                Margin="0,10,0,0">
                                <Run Text="[Ctrl+T] - Транспонировать матрицу системы"/>
                                <LineBreak/>
                                <Run Text="[Ctrl+S] - Сохранить матрицу системы"/>
                                <LineBreak/>
                                <Run Text="[Ctrl+B] - Решить созданную матрицу системы"/>
                                <LineBreak/>
                                <Run Text="[Ctrl+L] - Решить матрицу системы из LaTeX"/>
                                <LineBreak/>
                                <Run Text="[Ctrl+H] - Страница условных обозначений"/>
                            </TextBlock>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </hc:ScrollViewer>
        </Border>

        <!-- Правая область: Вывод матрицы -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Область вывода -->
            <hc:Card
                Grid.Row="1"
                BorderBrush="{DynamicResource RegionBrush}"
                Margin="10,10,30,30">
                <ScrollViewer
                    Visibility="{Binding Visibility}"
                    BorderBrush="{DynamicResource RegionBrush}"
                    Background="{DynamicResource RegionBrush}">
                    <!-- Разделы области вывода -->
                    <Frame
                        NavigationUIVisibility="{Binding NavigationVisibility}"
                        BorderBrush="{DynamicResource RegionBrush}"
                        Content="{Binding ComputesPage}"/>
                </ScrollViewer>
            </hc:Card>
        </Grid>
    </Grid>
</hc:Window>
